@page "/create"
@using Microsoft.AspNetCore.Components.Forms

<div id="create-form" class="vertical" hx-target="#create-form">
    <div class="row">
        <div class="col">
        </div>
        <div class="col">
            <h2>Create API key</h2>

            <fieldset>
                <legend>Fields</legend>
                <form hx-post="/api-keys/create" hx-swap="outerHTML">
                    <AntiforgeryToken/>

                    <div>
                        <label>Subdomain</label>
                        @if (HasErrors)
                        {
                            <input class="error" type="text" name="subdomain" placeholder="***">
                            <span>Can't be empty or already used!</span>
                        }
                        else
                        {
                            <input type="text" name="subdomain" placeholder="***">
                        }
                        
                    </div>

                    <br/>

                    <div>
                        <button>
                            Create
                        </button>
                    </div>

                    <br/>

                </form>
            </fieldset>
        </div>
        <div class="col">
        </div>
    </div>
</div>

@code {
    [Parameter] public bool HasErrors { get; set; }
}
