@page "/dashboard"

<div class="vertical">
    <div class="row">
        <div class="col"></div>
        <div class="col">
            <div>
                <h2>Dashboard</h2>
            </div>
            <div class="row">
                <div class="col">API keys</div>
                <div class="col"></div>
                <div class="col">
                    <div class="pull-right">
                        <button hx-get="/api-keys/create">Create</button>
                    </div>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col">
                    <table hx-target="closest tr">
                        <tr>
                            <th>ID</th>
                            <th>Subdomain</th>
                            <th>Actions</th>
                        </tr>
                        <tr>
                            <td>@Guid.Empty</td>
                            <td>
                                kdjsad 1
                            </td>
                            <td>
                                <button hx-delete="/api-keys/delete/dsads" hx-swap="outerHTML">Delete</button>
                            </td>
                        </tr>
                        <tr>
                            <td>@Guid.Empty</td>
                            <td>
                                kdjsad 2
                            </td>
                            <td>
                                <button hx-delete="/api-keys/delete/dsads" hx-swap="outerHTML">Delete</button>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <button hx-post="/authentication/logout">Logout</button>
        </div>
        <div class="col"></div>
    </div>
</div>